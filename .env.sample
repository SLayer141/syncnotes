# Database connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://username:password@localhost:5432/syncnotes?schema=public"

# NextAuth.js configuration
# Generate a random string for NEXTAUTH_SECRET using: openssl rand -base64 32
NEXTAUTH_SECRET="your-nextauth-secret-key"
NEXTAUTH_URL="http://localhost:3000"

# Resend API key
RESEND_API_KEY="your-resend-api-key-here"

# OAuth Providers (Optional - uncomment and fill in the ones you want to use)

# Google OAuth
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
# GITHUB_ID="your-github-client-id"
# GITHUB_SECRET="your-github-client-secret"

# Email Provider Configuration (Optional - for email notifications)
# EMAIL_SERVER_HOST="smtp.example.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-email@example.com"
# EMAIL_SERVER_PASSWORD="your-email-password"
# EMAIL_FROM="noreply@yourdomain.com"

# Application Configuration
NODE_ENV="development" # or "production"
APP_URL="http://localhost:3000"

# Security Configuration
# JWT_SECRET="your-jwt-secret" # Generate using: openssl rand -base64 32
# COOKIE_SECRET="your-cookie-secret" # Generate using: openssl rand -base64 32

# Rate Limiting (Optional)
# RATE_LIMIT_MAX=100 # Maximum number of requests per window
# RATE_LIMIT_WINDOW=60000 # Time window in milliseconds (60 seconds)

